<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Person Management - List</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Person Management System</h1>
      <a href="/person/create" class="btn btn-primary">Add New Person</a>
    </header>

    <h2>People List</h2>
    
    <% if (people.length === 0) { %>
      <p class="no-data">No people found. Add your first person!</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Mobile</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% people.forEach(person => { %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.age %></td>
              <td><%= person.gender %></td>
              <td><%= person.mobile %></td>
              <td class="actions">
                <a href="/person/<%= person._id %>/edit" class="btn btn-edit">Edit</a>
                <a href="/person/<%= person._id %>/delete" class="btn btn-delete">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>